 #  第十题
x = random.randint(1,13)
if x == 1:
    print('Ace')
elif x == 2 or x == 3 or x == 4 or x == 5 or x == 6 or x == 7 or x == 8 or x == 9 or x == 10:
    print(x)
elif x == 11:
    print('Jack')
elif x == 12:
    print('Queen')
elif x == 13:
    print('King')
y = random.randint(1,4)
if y == 1:
    print('梅花')
elif y == 2:
    print('红桃')
elif y == 3:
    print('方块')
elif y == 4:
    print('黑桃')
print(x,y,sep=' and ')
#   4
    方块
    4 and 3
 
#   第十一题
x = input('请任意输入一个三位整数')
if x[0] == x[2]:
    print(x,'is a palindrome')
else:
    print(x,'is not a palindrome')
#   请任意输入一个三位整数123
    123 is not a palindrome
    
#   第十二题
a,b,c = eval(input("请分别输入三角形的三个边长"))
if (a + b) > c and (a + c) > b and(b + c) > a: 
    L = a + b + c 
    print(L)
else:
    print('不是三角形')
#   请分别输入三角形的三个边长1,1,1
      3
